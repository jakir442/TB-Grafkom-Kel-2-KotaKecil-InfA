{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build all (main.cpp)",
      "type": "shell",
      "command": "C:/mingw64/bin/g++.exe",
      "args": [
        "-std=c++17",
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-o",
        "${workspaceFolder}/bin/app.exe",

        "-lfreeglut",
        "-lopengl32",
        "-lglu32",
        "-lFreeImage",

        "-IC:/freeglut/include",
        "-IC:/glm",
        "-I${workspaceFolder}/include",
        "-IC:/FreeImage/include",

        "-LC:/freeglut/lib",
        "-LC:/FreeImage/lib",
        "-L${workspaceFolder}/lib"
      ],

      // "group": { "kind": "build" },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build Jalan only",
      "type": "shell",
      "command": "C:/mingw64/bin/g++.exe",
