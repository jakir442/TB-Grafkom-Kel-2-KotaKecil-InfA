{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active file",
      "type": "shell",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-std=c++17",
        "-g",

        "${file}",

        "-o",
        "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",

        // ===== LIBRARY =====
        "-lfreeglut",
        "-lopengl32",
        "-lglu32",

        // ===== PATH INCLUDE =====
        "-IC:/freeglut/include",
        "-IC:/glm", // <----- TAMBAHKAN GLM
        "-I${workspaceFolder}/include",

        // ===== PATH LIB =====
        "-LC:/freeglut/lib",
        "-L${workspaceFolder}/lib"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
