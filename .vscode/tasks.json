{
  "version": "2.0.0",
  "tasks": [
    // Render semua file
    {
      "label": "build all",
      "type": "shell",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-std=c++17",
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-o",
        "${workspaceFolder}/bin/app.exe",
        "-lfreeglut",
        "-lopengl32",
        "-lglu32",
        "-IC:/freeglut/include",
        "-IC:/glm",
        "-I${workspaceFolder}/include",
        "-LC:/freeglut/lib",
        "-L${workspaceFolder}/lib"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },

